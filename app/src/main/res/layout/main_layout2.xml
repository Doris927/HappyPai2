<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <Button
        android:layout_width="@dimen/home_icon_size"
        android:layout_height="@dimen/home_icon_size"
        android:background="@drawable/home_default_btn_bg"
        android:drawableTop="@drawable/home_icon_help"
        android:paddingTop="@dimen/home_icon_top_margin"
        android:paddingBottom="@dimen/home_icon_bottom_margin"
        android:text="ヘルプ"
        android:textColor="#777777"
        android:id="@+id/button_help"
        android:textSize="@dimen/home_icon_text_size"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="@dimen/home_icon_size"
        android:layout_height="@dimen/home_icon_size"
        android:background="@drawable/home_default_btn_bg"
        android:drawableTop="@drawable/home_icon_cm"
        android:paddingTop="@dimen/home_icon_top_margin"
        android:paddingBottom="@dimen/home_icon_bottom_margin"
        android:text="CM"
        android:textColor="#777777"
        android:textSize="@dimen/home_icon_text_size"
        android:id="@+id/button_cm2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:id="@+id/button_left"
        android:src="@drawable/selector_btn_click_arrow_left"
        android:background="@color/gray_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.5" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="300dp" />

</android.support.constraint.ConstraintLayout>