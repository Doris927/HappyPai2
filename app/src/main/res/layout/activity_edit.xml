<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tammy.happypai2.effect.EditActivity"
    android:background="@color/black_bg">

    <ImageView
        android:id="@+id/iv_crop"
        android:scaleType="fitCenter"
        android:layout_above="@id/bottomBtLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/bottomBtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:background="@color/gray_bg">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/selector_btn_click_arrow_left"
            />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/bt_crop"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_button_crop"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:padding="5dp"/>
            <ImageButton
                android:id="@+id/bt_rotate"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_button_rotate"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>


        <ImageButton
            android:id="@+id/bt_sure"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_click_sure" />

    </RelativeLayout>


</RelativeLayout>
