<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical"
    tools:context="com.example.tammy.happypai2.effect.EffectActivity">

    <LinearLayout
        android:id="@+id/topBtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/bt_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_left"
                android:background="@android:color/transparent"
                android:layout_gravity="left"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/bt_sure"
                android:layout_width="35dp"
                android:layout_gravity="right"
                android:scaleType="fitXY"
                android:layout_height="35dp"
                android:src="@drawable/button_sure"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_effect_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBtLayout"
            android:scaleType="fitCenter"
            android:src="@drawable/advertise_img3"/>
        <LinearLayout
            android:id="@id/bottomBtLayout"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_bg">
            <Button
                android:id="@+id/bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:drawableTop="@drawable/button_edit_a"
                android:text="編集"
                android:textColor="@color/text_gray"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/bt_strengthen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:drawableTop="@drawable/button_change_a"
                android:text="強化"
                android:textColor="@color/text_gray"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/bt_effect"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:drawableTop="@drawable/button_effect2_a"
                android:text="エフェクト"
                android:textColor="@color/text_gray"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/bt_clear"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:drawableTop="@drawable/button_clear_a"
                android:text="クリア"
                android:textColor="@color/text_gray"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
