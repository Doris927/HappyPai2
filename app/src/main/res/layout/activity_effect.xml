<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical"
    tools:context="com.example.tammy.happypai2.effect.EffectActivity">

    <LinearLayout
        android:id="@+id/topBtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/bt_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_btn_click_arrow_left"
                android:background="@android:color/transparent"
                android:layout_gravity="left"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/bt_sure"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/selector_btn_click_sure"
                android:scaleType="fitXY"
                android:src="@drawable/button_sure" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_effect_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBtLayout"
            android:scaleType="fitCenter"
            android:src="@drawable/advertise_img3"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_original_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBtLayout"
            android:scaleType="fitCenter"
            android:src="@drawable/advertise_img3"
            android:visibility="gone" />


        <ImageButton
            android:id="@+id/bt_compare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_original_pic"

            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="19dp"
            android:layout_weight="0.24"
            android:background="@drawable/selector_btn_click_compare"
            android:paddingTop="15dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@id/bottomBtLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_bg"
            android:paddingBottom="0dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/button_edit_a"
                android:text="編集"
                android:textColor="@color/text_gray" />

            <Button
                android:id="@+id/bt_strengthen"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/button_change_a"
                android:text="強化"
                android:textColor="@color/text_gray" />

            <Button
                android:id="@+id/bt_effect"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/button_effect2_a"
                android:text="エフェクト"
                android:textColor="@color/text_gray" />

            <Button
                android:id="@+id/bt_clear"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/effect_button_height"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/button_clear_a"
                android:text="クリア"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
