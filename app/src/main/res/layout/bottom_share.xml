<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/border2"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:id="@+id/tab_share_home"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_image_home"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_btn_click_tab_home"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_share_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_image_search"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_btn_click_tab_search"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/button_send"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_btn_click_tab_add"
            android:background="#00000000"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_share_friend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tab_image_friend"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_btn_click_tab_recent"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_share_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/tab_image_profile"
            android:clickable="false"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/selector_btn_click_tab_profile"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>