<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0000000"
        android:padding="10dp"
        android:id="@+id/topBtLayout">
        <ImageButton
            android:id="@+id/btFlash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/button_flash_off"
            android:background="#00000000"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/btTurnCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/button_camera_change"
            android:background="#00000000"
           android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/preview"

        android:layout_above="@+id/bottomBtLayout"
       android:layout_below="@+id/topBtLayout">

    </SurfaceView>

    <LinearLayout
        android:id="@+id/bottomBtLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border2"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_cancel_a"
             />

        <ImageButton
            android:id="@+id/btCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_capture_a"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btEffect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/button_effect_a"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
             />

    </LinearLayout>


</RelativeLayout>
