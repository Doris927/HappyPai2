<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/recent_image_size"
            android:layout_height="@dimen/recent_image_size"
            android:src="@drawable/advertise_img1"
            android:id="@+id/mine_face_image"
            android:scaleType="center"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hahaha"
            android:textStyle="bold"
            android:id="@+id/follower_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="liked your pic"
            android:id="@+id/follower_action" />
    </LinearLayout>
    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/mine_followButton"
            android:textSize="10dp"
            android:text="follow"
            android:focusable="false"
            android:background="@color/gray_bg"/>

</LinearLayout>